<installer-gui-script minSpecVersion="1">
    <title>Eclipsa AAX Plugins Installer</title>

    <!-- License agreement the user must accept -->
    <license file="../LICENSE" />

    <!-- Disable customization - force system-wide installation only -->
    <options customize="never" />

    <!-- Enable only system-wide installation for AAX plugins -->
    <domains enable_localSystem="true" enable_currentUserHome="false" />

    <!-- Choices of what to install (default) -->
    <choices-outline>
        <line choice="default" />
    </choices-outline>

    <!-- Default choice for installing the AAX plugins -->
    <choice id="default" title="Eclipsa AAX Plugins">
        <pkg-ref id="com.eclipsaproject.plugins" />
    </choice>

    <!-- Reference to the package generated by pkgbuild -->
    <pkg-ref id="com.eclipsaproject.plugins" installKBytes="0" version="1.0.0" auth="Root">
        EclipsaPlugins.pkg</pkg-ref>
</installer-gui-script>
