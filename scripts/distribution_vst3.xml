<installer-gui-script minSpecVersion="1">
    <title>Eclipsa Plugins Installer</title>

    <!-- License agreement the user must accept -->
    <license file="LICENSE" />

    <!-- Allow user to select installation location and authentication level -->
    <options customize="allow" rootVolumeOnly="false" hostArchitectures="x86_64,arm64" />

    <!-- Enable both options: system-wide installation and user-specific installation -->
    <domains enable_localSystem="true" enable_currentUserHome="true" />

    <!-- Choices of what to install (default) -->
    <choices-outline>
        <line choice="default" />
    </choices-outline>

    <!-- Default choice for installing the plugins system-wide -->
    <choice id="default" title="Eclipsa VST3 Plugins"
        description="Install Eclipsa Audio plugins to the system VST3 directory for all users.">
        <pkg-ref id="com.eclipsaproject.plugins" />
    </choice>

    <!-- Reference to the package generated by pkgbuild -->
    <pkg-ref id="com.eclipsaproject.plugins" installKBytes="0" version="1.0.0" relocatable="true">
        EclipsaPlugins.pkg</pkg-ref>
</installer-gui-script>