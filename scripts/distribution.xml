<installer-gui-script minSpecVersion="1">
    <title>Eclipsa Plugins Installer</title>

    <!-- License agreement the user must accept -->
    <license file="../LICENSE" />

    <!-- Allow user to select installation location -->
    <options customize="allow" />

    <!-- Enable both options: system-wide installation and user-specific installation -->
    <domains enable_localSystem="true" enable_currentUserHome="true" />

    <!-- Choices of what to install (default) -->
    <choices-outline>
        <line choice="default" />
    </choices-outline>

    <!-- Default choice for installing the plugins -->
    <choice id="default" title="Eclipsa Plugins">
        <pkg-ref id="com.eclipsaproject.plugins" />
    </choice>

    <!-- Reference to the package generated by pkgbuild -->
    <pkg-ref id="com.eclipsaproject.plugins" installKBytes="0" version="1.0.0" auth="Root">
        EclipsaPlugins.pkg</pkg-ref>
</installer-gui-script>